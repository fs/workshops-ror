<%= form_for([@post, @comment]) do |f| %>
  <%- if @comment.errors.present? %>
    <div class='error-explanation'>
      <h2>
        <%= "#{pluralize(@comment.errors.count, 'error')} prohibited this comment from being saved" %>
      </h2>
      <ul>
        <%- @comment.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :body %>
  </div>
  <%= f.text_field :body %>
  <div>
    <%= f.submit %>
    or
    <%= link_to 'Cancel', @post %>
  </div>
<% end %>
