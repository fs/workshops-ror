<% title @post.title %>
<p><%= @post.body %></p>

<h2>Comments</h2>
<% if @comments.present? %>
  <ul>
    <%= render @comments %>
  </ul>
<% else %>
  No comments
<% end %>
<p />

<%= link_to 'Add comment', new_post_comment_path(@post, @comment) %>
<%= link_to 'Edit post', edit_post_path(@post) %>
<%= link_to 'Destroy post', post_path, :method => :delete, :confirm => 'Are you sure?' %>
